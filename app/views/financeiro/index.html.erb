<section class="welcome financeiro-welcome">
  <div class="welcome-text">
    <h2><i class="bi bi-cash-coin"></i> Financeiro</h2>
    <p>Consulte sua situação e solicite a emissão de boletos de mensalidade.</p>
  </div>
  <%= image_tag "logo.png", alt: "Logo", class: "logo-welcome" %>
</section>

<section class="content financeiro-content">
  <!-- Mini perfil -->
  <div class="perfil-card">
    <h3><i class="bi bi-person-badge"></i> Meu Perfil Financeiro</h3>
    <div class="perfil-info">
      <p><strong>Nome:</strong> <%= @aluno.nome %></p>
      <p><strong>Matrícula:</strong> <%= @aluno.matricula %> </p>
      <p><strong>Curso:</strong> <%= @aluno.curso %> </p>
      <p><strong>Situação Financeira:</strong> <span class="status status-regular">Regular</span></p>
    </div>
  </div>

  <div class="solicitacao-card">
    <h3><i class="bi bi-receipt"></i> Solicitar Boleto</h3>
    <p>Escolha o mês de referência para solicitar a emissão do boleto correspondente.</p>

    <%= form_with url: solicitar_boleto_path, method: :post, id: "solicitacaoForm" do |form| %>
      <div class="form-group">
        <%= form.label :mes, "Mês de Referência:" %>
        <%= form.select :mes, options_for_select([
          "Janeiro/2025",
          "Fevereiro/2025", 
          "Março/2025",
          "Abril/2025",
          "Maio/2025",
          "Junho/2025",
          "Julho/2025",
          "Agosto/2025",
          "Setembro/2025",
          "Outubro/2025",
          "Novembro/2025",
          "Dezembro/2025"
        ]), {}, { id: "mes", required: true, class: "form-select" } %>
      </div>

      <div class="form-actions">
        <%= form.button type: "submit", class: "primary" do %>
          <i class="bi bi-send"></i> Enviar Solicitação
        <% end %>
      </div>
    <% end %>

    <small class="hint">Sua solicitação será analisada pela secretaria financeira e o boleto será disponibilizado em até 24h úteis.</small>
  </div>
</section>
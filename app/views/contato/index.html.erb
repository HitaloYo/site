<section class="form-contato" style="margin-top: 40px; background: white; padding: 30px; border-radius: 12px; border: 2px solid rgb(132, 14, 201);">
  <h3 style="text-align: center; color: rgb(132, 14, 201); margin-bottom: 20px;">
    <i class="bi bi-send"></i> Envie uma Mensagem
  </h3>
  <form style="max-width: 600px; margin: 0 auto;">
    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; color: #333;">Nome Completo</label>
      <input type="text" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px;">
    </div>
    
    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; color: #333;">E-mail</label>
      <input type="email" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px;">
    </div>
    
    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; color: #333;">Assunto</label>
      <select style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px;">
        <option>Dúvida Acadêmica</option>
        <option>Problemas Técnicos</option>
        <option>Financeiro</option>
        <option>Sugestão</option>
        <option>Outros</option>
      </select>
    </div>
    
    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; color: #333;">Mensagem</label>
      <textarea rows="5" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px;"></textarea>
    </div>
    
    <button type="submit" style="background-color: rgb(132, 14, 201); color: white; border: none; padding: 12px 30px; border-radius: 6px; cursor: pointer; font-size: 16px;">
      <i class="bi bi-send"></i> Enviar Mensagem
    </button>
  </form>
</section>
<section class="solicitacoes-section">
  <h2><i class="bi bi-envelope-paper"></i> Solicitações de Serviço</h2>
  <p class="descricao">
    Escolha o tipo de documento que deseja solicitar e acompanhe abaixo os
    downloads disponíveis.
  </p>

  <%= form_with url: enviar_solicitacao_path, method: :post, class: "solicitacao-form" do |form| %>
    <div class="form-group">
      <%= form.label :tipo_solicitacao, "Tipo de Solicitação:" %>
      <%= form.select :tipo_solicitacao, options_for_select([
        ["Selecione uma opção", ""],
        ["Declaração de Matrícula", "declaracao-matricula"],
        ["Declaração de Disciplinas Matriculadas", "declaracao-disciplinas"],
        ["Histórico Acadêmico", "historico-academico"]
      ]), {}, { id: "tipo-solicitacao", required: true, class: "form-select" } %>
    </div>

    <div class="form-group">
      <%= form.label :observacoes, "Observações (opcional):" %>
      <%= form.text_area :observacoes, id: "observacoes", rows: 4, placeholder: "Digite aqui alguma observação ou informação adicional...", class: "form-textarea" %>
    </div>

    <%= form.button type: "submit", class: "btn-enviar" do %>
      <i class="bi bi-send"></i> Enviar Solicitação
    <% end %>
  <% end %>
</section>

<section class="downloads-section">
  <h2><i class="bi bi-download"></i> Downloads Disponíveis</h2>
  <p class="descricao">
    Aqui você encontra os documentos já processados e prontos para
    download.
  </p>

  <div class="downloads-grid">
    <div class="download-card">
      <i class="bi bi-file-earmark-text"></i>
      <h3>Declaração de Matrícula</h3>
      <p>Solicitada em: 10/10/2025</p>
      <%= link_to "Baixar", baixar_documento_path(documento: 'declaracao_matricula'), class: "download-button" %>
    </div>

    <div class="download-card">
      <i class="bi bi-file-earmark-bar-graph"></i>
      <h3>Histórico Acadêmico</h3>
      <p>Solicitada em: 05/10/2025</p>
      <%= link_to "Baixar", baixar_documento_path(documento: 'historico_academico'), class: "download-button" %>
    </div>
  </div>
</section>